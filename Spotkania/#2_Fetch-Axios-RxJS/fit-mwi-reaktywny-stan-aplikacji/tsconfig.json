{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "baseUrl": "./",
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }],
    "paths": {
      "@shared/*": [ "src/app/shared/*" ],
      "@store/*": [ "src/app/store/*" ],
      "@env/*": [ "src/environments/*" ]
    }
  }
}